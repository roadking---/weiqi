header.container
	nav
		a#logo(href='/', title='logo') Shoutan
		ul.nav
			li: a#home(href='/', title='Home') Home

script#nav-tpl(type='text/template').
	<% if(data.myself){ %>
		<% if(! data.refs[data.myself].my_new_game){ %>
			<li><a href='/new' title='#{lingua.new_game}'>#{lingua.new_game}</a></li>
			<li><a href='/dapu' title='#{lingua.dapu}'>#{lingua.dapu}</a></li>
		<% } %>
		<li><a id='mine' href='/u/<%=data.myself%>', title='#{lingua.my_page}'>Mine</a></li>
	<% } else { %>
		<li><a href='/new' title='#{lingua.new_game}'>#{lingua.new_game}</a></li>
		<li><a href='/dapu' title='#{lingua.dapu}'>#{lingua.dapu}</a></li>
	<% } %>
script#login-or-register-tpl(type='text/template').
	<div id='login-or-register'>
		<a id='register' href='/register'><span>#{lingua.register}</span></a>
		<a id='login' href='/login'><span>#{lingua.login}</span></a>
	</div>
script.
	function init_header(data){
		$('header nav ul.nav').append(tpl('#nav-tpl')({data:data}));
		if(!data.myself)
			$('header').append(tpl('#login-or-register-tpl')(data, {variable:'data'}));
	}
	