ul.users_list
	line-height 18px
	overflow hidden
	zomm 1
	li
		width 200px
		float left
		margin 0 -1px 0 0
	a, a:hover strong
		background-color #f2f2f2
		background-image vendor('linear-gradient', #f8f8f8 #f2f2f2)
	a
		position relative
		text-decoration none
		display block
		height 36px
		margin 4px
		padding 4px 4px 4px 44px
		color #999
		overflow hidden
		border #ccc 1px solid
		border-radius 2px
		box-shadow #eee 0 0 2px
		img, em, strong
			vendor('transition', all .2s ease-out)
		img
			widh 36px
			height 36px
			float left
			margin 0 8px 0 -40px
			border-radius 2px
		em
			color #666
			font-style normal
			margin-right 10px
		strong
			color #ddd
			width 40px
			text-align right
			position absolute
			right 6px
			top 4px
			font bold 14px/16px microsoft yahei
	a:hover
		border-color #bbb
		box-shadow #ccc 0 0 2px
		background-color #fff
		background-image none
		img
			opacity .6
			margin-left 0
		em
			color #ee8b17
			font bold 12px/36px microsoft yahei
		strong
			color #ee8b17
			right 150px
			top 0
			text-align center
			border-right #ccc 1px solid
			height 44px
			line-height 40px
		