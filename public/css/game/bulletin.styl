#bulletin, #bulletin-local
	font-size 18px
	border-radius(10px)
	text-align center
	min-height 120px
	margin-bottom 1em
	width 100%
	display table
	& > *
		vertical-align middle
		display table-cell
	a
		cursor pointer
		text-decoration underline
#bulletin
	background-color rgba(237, 190, 200, .8)
	#finishing
		padding 20px 10px
		ul#regiments
			display block
			
			li
				display block
				margin-bottom 15px
				.guess
					display inline-block
					a
						text-decoration none
					a.selected
						background-color rgba(0,255,125,.3)
						cursor auto
					a.opponent-selected
						border 1px solid green
					a.default
						background-color rgba(0,125,255,.3)
			li.disagree
				border 1px solid black
	
	#retract
		display block
		cursor pointer
		border-radius(10px)
		width 100%
		height 30px
		line-height 30px
		margin-bottom 15px
		vertical-align middle
		i
			width 20px
			height 20px
			background-size 100% 100%
			display inline-block
			background-repeat no-repeat
			background-image url(/img/icons/undo.svg)

#bulletin-local
	background-color rgba(176, 224, 230, .8)