@import "footer"

#form-signin, #form-register
	max-width 300px
	background-color #fff
	padding 19px 29px 29px
	margin 0 auto 20px
	border 1px solid #e5e5e5
	vendor('border-radius', 5px)
	vendor('box-shadow', 0 1px 2px rgba(0,0,0,.05))
	input + input
		margin-top 6px

a#logo
	display block
	padding 5px
	margin 100px 0 40px 0

#otherwise
	margin-top 30px
	a#register, a#login
		text-decoration underline

