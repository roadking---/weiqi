#gaming-board
	width 600px
	background-color #ccc
	canvas
		display block
		margin 0
		border 1px solid rgab(0,0,0,0)
		-webkit-tap-highlight-color rgba(0,0,0,0)
		background-color #fff
	ul.stones
		li
			list-style none
		.black, .white
			r = 25px
			font-size 14px
			width r
			height r
			vendor('border-radius', r/2 + 1px)
			//border 1px solid black
			position absolute
			text-align center
			text-indent -99999px
		.black
			background -webkit-radial-gradient(60% 40%, farthest-side, #808080, #0f1926)
			background -moz-radial-gradient(60% 40%, farthest-side, #808080, #0f1926)
			background -o-radial-gradient(60% 40%, farthest-side, #808080, #0f1926)
			background radial-gradient(60% 40%, farthest-side, #808080, #0f1926)
			color white
		.white
			background -webkit-radial-gradient(60% 40%, farthest-side, #fffcf7, #d3d3d3)
			background -moz-radial-gradient(60% 40%, farthest-side, #fffcf7, #d3d3d3)
			background -o-radial-gradient(60% 40%, farthest-side, #fffcf7, #d3d3d3)
			background radial-gradient(60% 40%, farthest-side, #fffcf7, #d3d3d3)
			color black
		.show_num
			text-indent 0
		.selected.dead
			vendor('box-shadow', -2px 3px 13px rgba(255,0,0,1) !important)
		.selected.live
			vendor('box-shadow', -2px 3px 13px rgba(0,255,128,1) !important)
		.live
			vendor('box-shadow', 0 0 13px rgba(0,100,0,1))
		.dead
			vendor('box-shadow', 0 0 13px rgba(255,0,0,1))
		.disagree
			vendor('box-shadow', 0 0 13px rgba(255,200,0,1))
		.repealed
			display none
		.black.last
			vendor('box-shadow', inset 0 0 0 3px rgba(255,255,255,.5))
		.white.last
			vendor('box-shadow', inset 0 0 0 3px rgba(0,0,0,.5))
.your_turn
	ul.stones
		li:last-child
			vendor('animation-name', vibrate)
			vendor('animation-duration', 5s)
			vendor('animation-iteration-count', infinite)
			vendor('animation-direction', alternate)

@keyframes vibrate
	0%
		vendor('transform', scale(1) skew(0deg) translate(0, 0))
	60%
		vendor('transform', scale(1) skew(0deg) translate(0, 0))
	61%
		vendor('transform', scale(1.02) skew(1deg, 2deg) translate(1px, 1px))
	62%
		vendor('transform', skew(2deg, -2deg) translate(-1px, -1px))
	64%
		vendor('transform', skew(-2deg) translate(1px, 1px))
	65%
		vendor('transform', scale(1) skew(0deg) translate(0, 0))
	100%
		vendor('transform', scale(1) skew(0deg) translate(0, 0))