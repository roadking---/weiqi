#gaming-board
	width 600px
	background-color #ccc
	canvas
		display block
		margin 0
		border 1px solid rgab(0,0,0,0)
		-webkit-tap-highlight-color rgba(0,0,0,0)
		background-color #fff
	canvas.your_turn
		border 1px solid red
	ul.stones
		li
			list-style none
		.black, .white
			r = 23px
			width r
			height r
			vendor('border-radius', r/2 + 1px)
			border 1px solid black
			position absolute
			text-align center
			text-indent -99999px
		.black
			background-color #0f1926
			color white
		.white
			background-color #fffcf7
			color black
		.show_num
			text-indent 0
		.selected.dead
			vendor('box-shadow', -2px 3px 13px rgba(255,0,0,1) !important)
		.selected.live
			vendor('box-shadow', -2px 3px 13px rgba(0,255,128,1) !important)
		.live
			vendor('box-shadow', 0 0 13px rgba(0,100,0,1))
		.dead
			vendor('box-shadow', 0 0 13px rgba(255,0,0,1))
		.disagree
			vendor('box-shadow', 0 0 13px rgba(255,200,0,1))
		.repealed
			display none
		.black.last
			vendor('box-shadow', inset 0 0 0 3px rgba(255,255,255,.5))
		.white.last
			vendor('box-shadow', inset 0 0 0 3px rgba(0,0,0,.5))
		